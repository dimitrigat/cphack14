extends layout

block content
    .header.jumbotron.subhead
        .container
            .row
                .col-md-12
                    h1 Hackathon shop
                    p.lead Das wird voll gut!

                    .container
                        mixin productList(products)
                            .row
                                - each product in products
                                    .col-md-4
                                       a(href="/product/"+product.id): h2= product.masterData.current.name.en
                                       a(href="/product/"+product.id): img(src=product.masterData.current.masterVariant.images[0].url, width="100")
                                       = (product.masterData.current.masterVariant.prices[0].value.centAmount / 100)
                                       = product.masterData.current.masterVariant.prices[0].value.currencyCode
                        +productList(products)